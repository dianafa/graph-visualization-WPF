<Window x:Class="falkowska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10, 0, 10, 10" Name="MainGrid" MouseUp="MainGrid_MouseUp" Background="Coral">
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="230" />
        <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label  Grid.Column="0" Grid.Row="0" FontWeight="Bold">Choose algorithm</Label>
        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="sex">DFS</RadioButton>
        <RadioButton Grid.Column="0" Grid.Row="1" GroupName="sex">BFS</RadioButton>
        <RadioButton Grid.Column="0" Grid.Row="2" GroupName="sex" IsChecked="True">Not sure</RadioButton>

        <Label Grid.Row="1" VerticalAlignment="Top" FontFamily="Trebuchet MS" 
        FontWeight="Bold" FontSize="18" Foreground="#0066cc">
            Graph
        </Label>

        <TextBlock Grid.Column="2" Text="City name: " />
        <TextBox Grid.Column="2" Text="{Binding name}" Width="50" Height="20"/>

        <Button Click="AddNode" Grid.Column="1" Grid.Row="3" Margin="0,10,0,0" Width="125" Height="25" HorizontalAlignment="Left">Add node</Button>

        <Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Nodes</Label>
        </Border>
        <ListBox Name="nodeListBox" Grid.Column="1" Grid.Row="2">
            <ListBoxItem>Mike</ListBoxItem>
            <ListBoxItem>Lisa</ListBoxItem>
            <ListBoxItem>John</ListBoxItem>
            <ListBoxItem>Mary</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
