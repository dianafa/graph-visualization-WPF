<Window x:Class="falkowska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="700">
    <Grid Height="700" Width="700" Margin="10, 0, 10, 10" Name="MainGrid" MouseUp="MainGrid_MouseUp" Background="Coral">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label  Grid.Column="0" Grid.Row="0" FontWeight="Bold">Choose algorithm</Label>
        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="sex" Margin="0,22,58,90">DFS</RadioButton>
        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="sex" Content="BFS" Margin="0,38,10,80"/>
        <RadioButton Grid.Column="0" Grid.Row="0" GroupName="sex" IsChecked="True" Margin="0,56,10,63">Not sure</RadioButton>

        <TextBlock Grid.Column="2" ><Run Language="pl-pl" Text=""/><LineBreak/><Run Text=" "/></TextBlock>

        <Button Click="AddNode" Grid.Column="0" Grid.Row="6" Margin="0,81,0,61" Width="175" Height="25" HorizontalAlignment="Left">Add node</Button>
        <Button Click="EditNode" Grid.Column="0" Grid.Row="4" Margin="0,5,0,102" Width="150" Height="25" HorizontalAlignment="Left">Edit node</Button>
        <Button Click="RemoveNode" Grid.Column="0" Grid.Row="4" Margin="0,35,0,64" Width="150" Height="25" HorizontalAlignment="Left">Remove node</Button>

        <Border Grid.Column="0" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Nodes</Label>
        </Border>
        <ListBox Name="lbNodes" DisplayMemberPath="Value" Grid.Column="0" Grid.Row="2">
        </ListBox>
        <TextBox Name="NameInput" Height="20" Margin="10,6,25,141" Grid.Row="6"/>
        <TextBox Name="PopulationInput" Height="20" Margin="10,31,25,116" Grid.Row="6"/>
        <TextBox Name="CountyInput" Height="20" Margin="10,56,25,91" Grid.Row="6"/>
    </Grid>
</Window>
